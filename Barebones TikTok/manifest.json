{
  "manifest_version": 3,
  "name": "Barebones TikTok",
  "version": "1.0",
  "description": "Remove all temptations to scroll on TikTok.",
  "permissions": ["scripting", "tabs", "webNavigation"],
  "host_permissions": ["*://www.tiktok.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.tiktok.com/*"],
      "js": ["content.js"]
    }
  ]
}